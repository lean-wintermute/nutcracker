rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Votes collection - anyone authenticated can write, anyone can read (for aggregation)
    // Delete allowed for admin clearing (testing only - tighten for production)
    match /votes/{voteId} {
      allow create: if request.auth != null;
      allow read: if true;  // Public read for global ranking aggregation
      allow delete: if request.auth != null;  // Admin clear function
    }

    // Feedback collection
    match /feedback/{feedbackId} {
      allow create: if request.auth != null &&
                      request.resource.data.visitorId == request.auth.uid;
      allow read: if request.auth != null;
    }

    // Suggestions collection - queued for human review
    match /suggestions/{suggestionId} {
      allow create: if request.auth != null &&
                      request.resource.data.text.size() <= 500;
      allow read: if request.auth != null;  // Allow read for review UI
    }

    // Aggregated rankings (read-only, updated by cloud function if added later)
    match /rankings/{imageId} {
      allow read: if true;
      allow write: if false;
    }

    // Helpbot logs - written by cloud function only
    // No client access - cloud functions use admin SDK which bypasses rules
    match /helpbot_logs/{logId} {
      allow read: if false;
      allow write: if false;
    }

    // ============================================
    // Imagine Bar Collections (Mode A - Story Scrapbook)
    // ============================================

    // imagine_config - Feature flags and test user whitelist
    // Read by authenticated clients to check feature access
    // Write only via Firebase Console (admin)
    match /imagine_config/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // imagine_sessions - Session-based rate limiting (5 stories / 4 hours)
    // Written by cloud function only (admin SDK bypasses rules)
    match /imagine_sessions/{userId} {
      allow read: if false;
      allow write: if false;
    }

    // imagine_spend - Daily spend tracking ($20/day per user)
    // Written by cloud function only
    match /imagine_spend/{docId} {
      allow read: if false;
      allow write: if false;
    }

    // ============================================
    // Mode B: Imagine Scenes Collections
    // ============================================

    // Imagine quota tracking - read by owner, write by Cloud Function only
    match /imagine_users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;  // Cloud Function uses Admin SDK
    }

    // System budget tracking - admin only
    match /system/{docId} {
      allow read: if false;
      allow write: if false;  // Admin SDK only
    }

    // Generated images - public read, owner manage
    match /imagined_images/{imageId} {
      allow read: if true;  // Public for gallery/voting
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null &&
                              resource.data.userId == request.auth.uid;
    }

    // Imagine logs - Cloud Function only
    match /imagine_logs/{logId} {
      allow read: if false;
      allow write: if false;  // Cloud Function uses Admin SDK
    }
  }
}
