{
  "name": "nutcracker-helpbot",
  "version": "1.1.0",
  "description": "Helpbot and Imagine Bar backend for Nutcracker app",
  "main": "index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "deploy": "firebase deploy --only functions",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@google/generative-ai": "^0.21.0",
    "@octokit/rest": "^20.0.2",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "markdown-it": "^14.1.0",
    "sinon": "^17.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/animals.js",
      "lib/constants.js",
      "lib/gemini.js",
      "lib/scene-enhancer.js",
      "lib/image-generator.js",
      "lib/quota-manager.js",
      "lib/storage-manager.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "private": true
}
